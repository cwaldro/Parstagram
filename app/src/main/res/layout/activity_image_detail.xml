<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageDetailActivity">

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="23sp"
        tools:text="I went to the park today with my dog named clifford." />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tvCaption"
        android:layout_above="@id/tvCaption"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:text="clairewaldron" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvCaption"
        android:layout_above="@id/tvCaption"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@id/tvUser"
        android:textSize="20sp"
        tools:text="30 seconds ago" />
</RelativeLayout>